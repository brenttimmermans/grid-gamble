---
import { CARS } from "../scripts/config";
---

<div id="race-hud" class="hidden flex flex-col gap-4">
  <div id="lap-counter" class="text-center text-lg font-bold text-gray-300">
    Lap 1 / 5
  </div>

  <div id="leaderboard" class="flex flex-col gap-1">
    {
      CARS.map((car, i) => (
        <div
          data-leaderboard-id={car.id}
          class="flex items-center gap-2 px-3 py-1.5 rounded bg-gray-800/60 text-sm"
        >
          <span class="font-mono text-gray-500 w-5">{i + 1}.</span>
          <span
            class="inline-block w-3 h-3 rounded-full"
            style={`background-color: ${car.color}`}
          />
          <span class="text-gray-300">{car.name}</span>
        </div>
      ))
    }
  </div>
</div>
